<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.openstack.packages</groupId>
    <artifactId>mtwilson-openstack-trusted-node-ubuntu</artifactId>
    
    <packaging>pom</packaging>
    <description>Self-extracting executable that installs the Mystery Hill compute node comprehensive packages</description>
    
    <parent>
        <groupId>com.intel.mtwilson.maven</groupId>
        <artifactId>mtwilson-maven-package-makeself</artifactId>
        <version>3.2-SNAPSHOT</version>
        <relativePath/>
    </parent>
    
    <properties>
        <!-- this becomes the installer filename, like ${makeself.name}.bin -->
        <makeself.name>${project.artifactId}-${project.version}</makeself.name>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>com.intel.mtwilson.linux</groupId>
            <artifactId>mtwilson-linux-util</artifactId>
            <version>${project.version}</version>
            <type>sh</type>
        </dependency>
        <dependency>
            <groupId>com.intel.mtwilson.linux</groupId>
            <artifactId>mtwilson-trustagent-ubuntu</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
        </dependency>
        <dependency>
            <groupId>com.intel.mtwilson.vrtm.packages</groupId>
            <artifactId>vrtm</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
            <classifier>ubuntu</classifier>
        </dependency>
        <dependency>
            <groupId>com.intel.mtwilson.policyagent.packages</groupId>
            <artifactId>mtwilson-policyagent</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
        </dependency>
        <dependency>
            <groupId>com.intel.mtwilson.openstack.packages</groupId>
            <artifactId>mtwilson-openstack-node</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
		</dependency>
        <dependency>
            <groupId>com.intel.mtwilson.docker-proxy</groupId>
            <artifactId>docker-proxy</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
        </dependency>
    </dependencies>
    
</project>
